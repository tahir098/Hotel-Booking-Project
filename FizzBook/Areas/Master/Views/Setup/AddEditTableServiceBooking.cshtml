@model FizzBook.HotelModels.TableServiceBooking

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            @if (Model.Id != 0)
            {
                <h5 class="modal-title" id="exampleModalLabel">
                    Edit Room Service For Booking
                </h5>
            }
            else
            {
                <h5 class="modal-title" id="exampleModalLabel">
                    Add Room Service For Booking
                </h5>
            }
        </div>
        <div class="modal-body">
            <form id="formToSubmit"
                  method="post"
                  data-ajax="true"
                  data-ajax-method="post"
                  data-ajax-begin="OnBegin"
                  data-ajax-success="completed"
                  data-ajax-failure="OnFailure"
                  data-ajax-url="@Url.Action("AddEditTableServiceBooking","Setup")">
                <div asp-validation-summary="ModelOnly">
                    <span>Please correct the following errors</span>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Name : <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="">
                        <span class="form-text text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="col-lg-12">
                        <label>Price :</label>
                        <input asp-for="Price" class="form-control" placeholder="">
                        <span class="form-text text-danger" asp-validation-for="Price"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
            <button type="button" onclick="SubmitForm()" id="GenericOkbtn" class="btn btn-primary font-weight-bold">Submit</button>
        </div>
    </div>
</div>



<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        jQuery.validator.unobtrusive.parse("#GenericForm");
    });
</script>
