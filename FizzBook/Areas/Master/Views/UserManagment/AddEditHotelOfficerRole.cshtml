@*@model FizzBook.Areas.Master.Models.Setup.RolesModel*@

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            @if (Model.Id != 0)
            {
                <h5 class="modal-title" id="exampleModalLabel">
                    Edit Role
                </h5>
            }
            else
            {
                <h5 class="modal-title" id="exampleModalLabel">
                    Add Role
                </h5>
            }
        </div>
        <div class="modal-body">
            <form id="formToSubmit" method="post" data-ajax="true" data-ajax-begin="OnBegin" data-ajax-success="completed" data-ajax-failure="OnFailure" data-ajax-url="@Url.Action("AddEditHotelOfficerRole","UserManagment")">
                @if (Model.Id != 0)
                {
                    @Html.HiddenFor(p => p.Id)
                }
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Role<span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="">
                        <span class="form-text text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
            <button type="button" onclick="SubmitForm()" id="GenericOkbtn" class="btn btn-primary font-weight-bold">Submit</button>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        jQuery.validator.unobtrusive.parse("#GenericForm");
    });
</script>